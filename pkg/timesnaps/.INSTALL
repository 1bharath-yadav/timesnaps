post_install() {
  # Success message for installation
  echo -e "\033[1;32m✅ The timesnaps has been successfully installed! 📸\033[0m"

  # Instruction to manually enable and start the timer
  echo -e "\033[1;34m🔄 Please enable and start the timesnaps manually using the following commands:\033[0m"
  echo -e "\033[1;37m  systemctl --user enable timesnaps.timer\033[0m"
  echo -e "\033[1;37m  systemctl --user start timesnaps.timer\033[0m"

}

post_upgrade() {
  # Message for upgrading
  echo -e "\033[1;32m🔄 The timesnaps has been upgraded! 🚀\033[0m"

  # Instruction to restart the timer
  echo -e "\033[1;34m🔄 Please restart the timesnaps timer manually using the following command:\033[0m"
  echo -e "\033[1;37m  systemctl --user restart timesnaps.timer\033[0m"

  # Directory reminder
  echo -e "\033[1;36m💾 Snaps will continue to store in \033[1;33m$(whoami)/timesnaps\033[0m \033[1;36mdirectory.\033[0m"
}

pre_remove() {
  # Removal warning
  echo -e "\033[1;31m⚠️  The timesnaps is about to be removed! Please follow these steps:\033[0m"

  # Instruction to stop and disable the timer
  echo -e "\033[1;34m🔄 Please stop and disable the timesnaps timer manually using the following commands:\033[0m"
  echo -e "\033[1;37m  systemctl --user stop timesnaps.timer\033[0m"
  echo -e "\033[1;37m  systemctl --user disable timesnaps.timer\033[0m"
}
